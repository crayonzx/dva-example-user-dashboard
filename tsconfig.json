{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types",
    ],
    "paths": {
      // "dva": ["./@types/dva/index.d.ts"],
      // "dva/dynamic": ["./@types/dva/dynamic.d.ts"],
      // "dva/router": ["./@types/dva/router.d.ts"],
      "dva-loading": ["./@types/dva-loading"],
      // "fastclick": ["./@types/fastclick"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
  ]
}
